@page "/NewCategory"
@attribute [Authorize(Roles = "Admin")]
<PageTitle>Add New Category</PageTitle>

<div class="card">
    <div class="card-header">
        <h3>New Category</h3>
    </div>
    <div class="card-body">
        <EditForm Model="@category" OnSubmit="Create">
            <DataAnnotationsValidator /> 
            <ValidationSummary />
            @if(message != "")
            {
                <div class="alert alert-danger">
                    <h5>@message</h5>
                </div>
            }
            <div class="form-group">
                <label for="name" class="form-label col-3">Name</label>
                <InputText class="form-control col-9" id="name" @bind-Value="category.name"> </InputText>
                <ValidationMessage For="@(() => category.name)" />
            </div>
            <button class="btn btn-info float-end mt-2 mb-2" type="submit" value="Save">Save</button>
            <button class="btn btn-info float-end m-2" @onclick="Back">Back</button>
        </EditForm>
    </div>
</div>
