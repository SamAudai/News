@page "/categories"

@attribute [Authorize(Roles ="Admin")]
<PageTitle>Categories</PageTitle>

@if(_categories == null)
{
    <div class="loader"></div>
}
else
{
    <button type="button" class="btn btn-danger mb-2" @onclick="GetErrors">Show Errors</button>
    <button type="button" class="btn btn-danger mb-2" @onclick="GetUnauthorizedErrors">Show Unauthorized</button>
    @if(message != "")
    {
        <div class="alert alert-danger">
            @message
        </div>
    }
    <div class="card">
        <div class="card-header">
            <h3>
                Category List
                <a href="NewCategory">
                    <span class="btn btn-primary float-end">New Category</span>
                </a>
            </h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Category Id</th>
                        <th>Category Name</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in _categories!)
                    {
                        <tr>
                            <td>@category.id</td>
                            <td>@category.name</td>
                            <td><a class="btn btn-info" href="/UpdateCategory/@category.id">Update</a></td>
                            <td><button class="btn btn-danger" @onclick="()=>Delete(category.id)">Delete</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}




