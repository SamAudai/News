@page "/roleslist"

<PageTitle>Roles List</PageTitle>

@if (_roles == null)
{
    <span class="loader"></span>
}
else
{
    <div class="card">
        <div class="card-header">
            <h3>Roles List
                <a href="newrole" class="float-end btn btn-primary">New Role</a>
            </h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in _roles)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td><a class="btn btn-danger" @onclick="()=>DeleteRole(role.Id)">Delete</a></td>
                            <td><a class="btn btn-info" href="/updaterole/@role.Id">Update</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
