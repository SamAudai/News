@page "/UpdateCategory/{id}"
@attribute [Authorize(Roles = "Admin")]
<PageTitle>Update Category</PageTitle>

<div class="card">
    <div class="card-header">
        <h3>Update Category</h3>
    </div>
    <div class="card-body">
        <EditForm Model="@category">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="name" class="form-label col-3">Name</label>
                <InputText class="form-control col-9" id="name" @bind-Value="category.name"> </InputText>
                <ValidationMessage For="() => category.name" />
            </div>
            <button class="btn btn-info float-end mt-2 mb-2" @onclick="()=>Update()">Update</button>
            <a class="btn btn-info float-end m-2" href="/categories">Back</a>
        </EditForm>
    </div>
</div>
