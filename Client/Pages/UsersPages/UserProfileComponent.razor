@page "/profile/{username}"
@attribute [Authorize]

<PageTitle>User Profile</PageTitle>

<div class="card">
    <div class="card-header">
        <h3>User @username Profile</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="UserName" class="form-label col-5">Name</label>
            <label class="form-control col-7" id="UserName">@_user.UserName </label>
        </div>
        <div class="form-group">
            <label for="Email" class="form-label col-5">Email</label>
            <label class="form-control col-7" id="Email">@_user.Email </label>
        </div>
        <div class="form-group">
            <label for="Country" class="form-label col-5">Country</label>
            <label class="form-control col-7" id="Country">@_user.Country </label>
        </div>
        <div class="form-group">
            <label for="PhoneNumber" class="form-label col-5">Phone Number</label>
            <label class="form-control col-7" id="PhoneNumber">@_user.PhoneNumber </label>
        </div>
        <div class="form-group float-end btn btn-outline-dark">
            <a href="/changepassword/@_user.UserName">Change Password</a>
        </div>
    </div>
</div>
