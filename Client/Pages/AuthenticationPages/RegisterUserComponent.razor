@page "/register"

<PageTitle>Registeration</PageTitle>
<div class="card">
    <div class="card-header">
        <h3>Register new user</h3>
    </div>
    <div class="card-body">
        @if (isRegisterError == true)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in RegisterErrors)
                {
                    <h5>@error</h5>
                }
            </div>
        }
        <EditForm Model="_userRegistration" OnValidSubmit="Register">
            <DataAnnotationsValidator/>
            <div class="form-group row">
                <label for="UserName" class="col-md-2 col-form-label">User Name:</label>
                <InputText id="UserName" class="form-control" @bind-Value="_userRegistration.UserName" />
                <ValidationMessage For="@(()=>_userRegistration.UserName)" />
            </div>
            <div class="form-group row">
                <label for="UserEmail" class="col-md-2 col-form-label">User Email:</label>
                <InputText id="UserEmail" class="form-control" @bind-Value="_userRegistration.UserEmail" />
                <ValidationMessage For="@(()=>_userRegistration.UserEmail)" />
            </div>
            <div class="form-group row">
                <label for="Password" class="col-md-2 col-form-label">Password:</label>
                <InputText id="Password" type="password" class="form-control" @bind-Value="_userRegistration.Password" />
                <ValidationMessage For="@(()=>_userRegistration.Password)" />
            </div>
            <div class="form-group row">
                <label for="ConfirmPassword" class="col-md-4 col-form-label">Confirm Password:</label>
                <InputText id="ConfirmPassword" type="password" class="form-control" @bind-Value="_userRegistration.ConfirmPassword" />
                <ValidationMessage For="@(()=>_userRegistration.ConfirmPassword)" />
            </div>
            <button class="btn btn-info float-end mt-2 mb-2" type="submit">Submit</button>
        </EditForm>
    </div>
</div>