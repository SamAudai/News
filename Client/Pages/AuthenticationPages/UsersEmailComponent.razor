@page "/getuserbyemail/{userEmail}"

<PageTitle>User Detailes</PageTitle>

<div class="card">
    <div class="card-header">
        <h3>User @_user.Email Detailes</h3>
    </div>
    <div class="card-body">
        <EditForm Model="_user">
            <div class="form-group">
                <label for="UserName" class="form-label col-1">Name</label>
                <InputText class="form-control col-5" id="UserName" @bind-Value="_user.UserName"> </InputText>
            </div>
            <div class="form-group">
                <label for="Email" class="form-label col-1">Email</label>
                <InputText class="form-control col-5" id="Email" @bind-Value="_user.Email"> </InputText>
            </div>
            <div class="form-group">
                <label for="Country" class="form-label col-1">Country</label>
                <InputText class="form-control col-5" id="Country" @bind-Value="_user.Country"> </InputText>
            </div>
            <div class="form-group">
                <label for="PhoneNumber" class="form-label col-1">Phone Number</label>
                <InputText class="form-control col-5" id="PhoneNumber" @bind-Value="_user.PhoneNumber"> </InputText>
            </div>
        </EditForm>
    </div>
</div>


